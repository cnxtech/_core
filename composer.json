{
    "name": "codex/codex",
    "description": "The Laravel Framework.",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "wikimedia/composer-merge-plugin": "~1.3",
        "predis/predis": "~1.0",
        "codex/core": "1.0.*",
        "codex/phpdoc-hook": "1.0.*",
        "codex/filesystem-hook": "1.0.*",
        "codex/git-hook": "1.0.*",
        "codex/auth-hook": "1.0.*"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "~2.1",
        "barryvdh/laravel-debugbar": "~2.1",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "composer.dev.json"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-autoload-dump": [
            "php artisan phpstorm:meta",
            "php artisan ide-helper:generate",
            "php artisan ide-helper:models"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}